  "supabase": {
    "description": "Supabase provides the complete backend infrastructure for the MVP",
    "services": {
      "auth": {
        "description": "Authentication and user management",
        "providers": ["Email/Password"],
        "features": ["Session management", "JWT tokens", "User metadata"],
        "note": "Google OAuth stub exists but not fully implemented"
      },
      "database": {
        "description": "PostgreSQL database with Row Level Security",
        "tables": ["users", "places", "experiences", "bookmarks", "tags", "follows"],
        "features": ["RLS policies", "Foreign key relationships", "Indexes", "Triggers"]
      },
      "storage": {
        "description": "File storage for user uploads",
        "buckets": {
          "experience-images": "Images uploaded for experiences (public)",
          "avatars": "User profile pictures (public, per-user folders)"
        },
        "features": ["Public buckets", "RLS policies per folder"]
      }
    },
    "packages": {
      "@supabase/supabase-js": "2.90.1 - Core Supabase client",
      "@supabase/ssr": "0.8.0 - Server-side rendering utilities for Next.js"
    },
    "environment_variables": {
      "NEXT_PUBLIC_SUPABASE_URL": "Supabase project URL",
      "NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY": "Client-side publishable key (for auth state listening)",
      "SUPABASE_SECRET_KEY": "Server-side secret key (for all database operations)",
      "NEXT_PUBLIC_SITE_URL": "Site URL for OAuth redirects (default: http://localhost:3000)",
      "GOOGLE_PLACES_API_KEY": "Google Places API key for place search"
    },
    "client_utilities": {
      "lib/supabase/client.ts": "Browser client (createBrowserClient) - cached singleton",
      "lib/supabase/server.ts": "Server client for API routes (createServerClient with secret key)",
      "lib/supabase/middleware.ts": "Middleware client for auth checks (updateSession)"
    }
  },
  "architecture": {
    "structure": {
      "suggested_folders": [
        "app/[locale]/ (routes with i18n)",
        "app/[locale]/app/ (authenticated app routes)",
        "app/[locale]/auth/ (authentication routes)",
        "app/api/ (API routes)",
        "app/auth/callback/ (Supabase auth callback)",
        "components/ (shared UI)",
        "features/auth/",
        "features/feed/",
        "features/add/",
        "features/profile/",
        "features/experience-detail/",
        "features/explore/",
        "hooks/ (global hooks)",
        "lib/supabase/ (Supabase clients)",
        "lib/api/ (API utilities and facade)",
        "lib/models/",
        "lib/auth/ (AuthContext, getServerUser)",
        "lib/utils/",
        "locales/ (i18n messages: pt-BR.json, en-US.json)",
        "i18n/ (routing and request config)"
      ]
    },
    "principles": [
      "Feature-first folders (feed, add, profile, auth, explore) instead of huge global components folder.",
      "Use Supabase client directly in React Query hooks or API routes.",
      "Use domain types from lib/models mirroring Supabase database schema.",
      "Avoid unnecessary global state; use React Query for data fetching/caching.",
      "RLS policies enforce data access at the database level.",
      "API routes are thin wrappers for complex operations or server-side logic.",
      "AuthContext provides user state via React Context."
    ]
  },
  "integration": {
    "contracts": [
      "Use TypeScript types that match Supabase database schema exactly.",
      "Handle loading, error, and empty states explicitly.",
      "Never send google_maps_url from frontend; computed by Google Places API.",
      "All authenticated requests include Supabase session automatically.",
      "Tags stored as slug array in experiences.tags field."
    ],
    "location_behaviors": {
      "gps": "Use Geolocation API only when starting Quick Add; handle permission denied gracefully.",
      "ip_fallback": "Use Vercel geolocation headers (x-vercel-ip-city, etc.).",
      "manual_city": "Show CitySelector component when neither GPS nor IP works."
    },
    "place_deduplication": {
      "description": "Places are deduplicated to allow multiple users to recommend the same place. This enables recommendation counts and shared place data.",
      "strategy": [
        "1. Exact match by google_place_id for Google Places",
        "2. Case-insensitive match on name + city + country for manual places",
        "3. Coordinate proximity (~500m radius) with name similarity as fallback",
        "4. Country name normalization (Brasil->Brazil, EUA->United States)"
      ],
      "recommendation_count": "Count of experiences referencing a place. Displayed in search results, feed cards, and experience details.",
      "existing_place_modal": "When selecting a place with existing recommendations during Quick Add, a modal shows the recommendation count and top tags."
    }
  },
